@model List<Psdtohtml.Models.ContentViewModel>
@{
    ViewBag.Title = "Index";
}

<link rel="stylesheet" type="text/css" href="~/content/vendor/slick/slick.min.css" />
<link rel="stylesheet" type="text/css" href="~/content/vendor/slick/slick-theme.min.css" />
<link href="~/content/vendor/icons/icofont.min.css" rel="stylesheet" type="text/css">
<link href="~/content/vendor/bootstrap/css/bootstrap.min.css" rel="stylesheet">
<link href="~/content/site.css" rel="stylesheet" />
<link href="~/content/css/style.css" rel="stylesheet">
<link href="~/content/vendor/sidebar/demo.css" rel="stylesheet">
<nav aria-label="breadcrumb" class="breadcrumb mb-0">
    <div class="container">
        <ol class="d-flex align-items-center mb-0 p-0">
            <li class="breadcrumb-item"><a href="#" class="text-success">Home</a></li>
            <li class="breadcrumb-item active" aria-current="page">Listing</li>
        </ol>
    </div>
</nav>
<section class="py-4 osahan-main-body">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="osahan-listing">
                    <div class="d-flex align-items-center mb-3">
                        <h4>Pick's Today</h4>
                        <div class="m-0 text-center ml-auto">
                            <a href="#" data-toggle="modal" data-target="#exampleModal" class="btn text-muted bg-white mr-2"><i class="icofont-filter mr-1"></i> Filter</a>
                            <a href="#" data-toggle="modal" data-target="#exampleModal" class="btn text-muted bg-white"><i class="icofont-signal mr-1"></i> Sort</a>
                        </div>
                    </div>
                                    

                    <div class="row">
@foreach (var image in Model)
{
                        <div class="col-6 col-md-3 mb-3">

                            <div class="list-card bg-white h-100 rounded overflow-hidden position-relative shadow-sm">
                                <div class="list-card-image">
                                    <a href="@Url.Action("ProductDetails", "StoreProduct")" class="text-dark">
                                        <div class="member-plan position-absolute"><span class="badge m-3 badge-danger">10%</span></div>
                                        <div class="p-3">
                                            <img src="data:image/png;base64,@Convert.ToBase64String(image.AlbumArtUrl)" alt="@image.Name" class="img-fluid item-img w-100 mb-3" />
                                            
                                            <h6>@image.Name</h6>
                                            <div class="d-flex align-items-center">
                                                <h6 class="price m-0 text-success">৳@image.Price/kg</h6>

                                                <a data-toggle="collapse" href="#collapseExample1" role="button" aria-expanded="false" aria-controls="collapseExample1" class="btn btn-success btn-sm ml-auto">+</a>

                                                <div class="collapse qty_show" id="collapseExample1">
                                                    <div>
                                                        <span class="ml-auto" href="#">
                                                            <form id='myform' class="cart-items-number d-flex" method='POST' action='#'>
                                                                <input type='button' value='-' class='qtyminus btn btn-success btn-sm' field='quantity' />
                                                                <input type='text' name='quantity' value='1' class='qty form-control' />
                                                                <input type='button' value='+' class='qtyplus btn btn-success btn-sm' field='quantity' />
                                                            </form>
                                                        </span>
                                                    </div>
                                                </div>

                                            </div>
                                        </div>
                                    </a>

                                </div>
                            </div>

                        </div>
}
                    </div>
                </div>
            </div>
        </div>
    </div>

</section>

<script src="~/scripts/7d0fa10a/cloudflare-static/rocket-loader.min.js"></script>
<script src="~/scripts/cloudflare-static/email-decode.min.js"></script>
<script src="~/scripts/jquery/hc-offcanvas-nav.js"></script>
<script src="~/scripts/jquery/jquery.min.js"></script>
<script src="~/content/vendor/bootstrap/js/bootstrap.bundle.min.js"></script>
<script src="~/scripts/jquery/slick.min.js"></script>
<script src="~/scripts/js/osahan.js"></script>
<script src="~/scripts/cloudflare-static/beacon.min.js"></script>



